{
  "extends": "@travelese/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.ts",
    "../dashboard/src/hooks/use-navigation.ts",
    "../dashboard/src/hooks/use-search-form.ts",
    "../dashboard/src/utils/duffel.ts",
    "../dashboard/src/app/[locale]/(app)/(sidebar)/travel/layout.tsx"
  ],
  "exclude": ["node_modules"]
}
